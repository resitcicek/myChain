<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#FAB950"
    android:minHeight="110dp"
    android:radius="10dp">

    <TextView
        android:id="@+id/rowname"
        android:layout_width="365dp"
        android:layout_height="26dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textColor="#221622"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/rowdesc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rowdesc"
        android:layout_width="366dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:editable="false"
        android:maxHeight="50dp"
        android:text="TextView"
        android:textColor="#221622"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rowname" />

    <TextView
        android:id="@+id/rowuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_baseline_supervised_user_circle_24"
        android:text="Duration"
        android:textColor="#221622"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rowcat" />

    <TextView
        android:id="@+id/rowcat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_baseline_featured_play_list_24"
        android:text="Duration"
        android:textColor="#221622"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>